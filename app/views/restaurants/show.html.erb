<%= link_to "/restaurants" do %>
      <i class="btn btn-primary mt-5 mx-5"> ⬅️Go back to the restaurant's list</i>
<% end %>
<div class="container mt-5">
  <h1><%= @restaurant.name %></h1>
    <ul>
      <li><%= @restaurant.address %></li>
      <li><%= @restaurant.phone_number %></li>
    </ul>
  <p><strong>Reviews</strong></p>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item"><%= review.rating %> -- <%= review.content %></li>
      <% end %>
    </ul>
    <%= link_to new_restaurant_review_path(@restaurant) do %>
      <i class="btn btn-primary">Add a new review</i>
    <% end %>

</div>
